<Page x:Class="AppTester.RadioMobile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppTester"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RadioMobile">

    <StackPanel x:Name="sp_contents">
        <TextBlock x:Name="tb_cblabel" Text="Select drive"/>
        <ComboBox x:Name="cbx_drives" Loaded="cbx_drives_Loaded" 
                  VerticalAlignment="Top" SelectionChanged="cbx_drives_SelectionChanged"/>
        <Button x:Name="btn_install" Content="Install Radio Mobile (English)" Margin="0,48" Click="btn_install_Click"/>
    </StackPanel>
</Page>

<Page
    x:Class="CodeTester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeTester"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="lv_items" 
                  Padding="0,24"
                  Loaded="lv_items_Loaded" 
                  SelectionChanged="lv_items_SelectionChanged">
            <ListViewItem Tag="display" Content="Advanced Display"/>
            <ListViewItem Tag="sdk" Content="Get SDK items"/>
            <ListViewItem Tag="smithchart" Content="Smith Chart Printer"/>
            <ListViewItem Tag="convert" Content="To Engineering"/>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Padding="24,0"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Frame x:Name="fr_view" Grid.Column="1"/>
    </Grid>
</Page>

<Page
    x:Class="LogiBatteryStatus.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LogiBatteryStatus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Tapped="StackPanel_Tapped">
            <TextBlock
                Margin="0,12"
                FontSize="64"
                Tapped="TextBlock_Tapped"
                Text="Logitech M585/M590 Battery Status" />
            <TextBlock
                x:Name="batteryStatus"
                Margin="0,12"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Page>
